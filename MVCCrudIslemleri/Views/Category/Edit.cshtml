@{
    Layout = null;
}

@using MVCCrudIslemleri.Data.Entities
@model Category

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Düzenle</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    @if (ViewBag.IsSuccess != null || ViewBag.IsSuccess == true)
    {
        <div class="alert alert-success">@ViewBag.Message</div>
    }
    else if (ViewBag.IsSuccess != null || ViewBag.IsSuccess == false)
    {
        <div class="alert alert-danger">@ViewBag.Message</div>
    }

    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                @using (Html.BeginForm())
            {
                  
                    @Html.AntiForgeryToken()
                    //form içindeki inputların web sitesi tarafından gönderildiğini anlamak için kullanılan bir güvenlik özelliği her post formunda olmalıdır.
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control"})
                    <span class="text-danger">@Html.ValidationMessageFor(x => x.Name)</span>

                    @Html.TextAreaFor(x => x.Description, new { @class = "form-control"})
                    <span class="text-danger">@Html.ValidationMessageFor(x => x.Description)</span>

                    <input class="btn btn-primary" type="submit" name="name" value="Kategori Düzenle" />
                }
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>